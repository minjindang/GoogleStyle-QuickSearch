<!DOCTYPE html>
<html>
<head>
  <title>Shine</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body class="container">
  <% if notice.present? %>
    <%= notice %>
  <% end %>
  <% if alert.present? %>
    <%= alert %>
  <% end %>

  <%= yield %>

</body>
</html>
